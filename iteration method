#include <stdio.h>
int iterationMethod(int n) {
    int result = 0;
    while (n > 1) {
        result += n; // Accumulate the cost at each level
        n /= 2; // Reduce n by half
    }
    return result + 1; // Add base case
}

int main() {
    int n = 8; // Example input
    printf("T(%d) = %d\n", n, iterationMethod(n));
    return 0;
}
